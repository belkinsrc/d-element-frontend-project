.card {
    background-color: #F2F3F4;
    padding: 20px;
    border-radius: 12px;
    max-width: 328px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.card__image-wrapper {
    margin-bottom: 24px;
}

.card__content {
    margin-bottom: 4px;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
}

.card__title {
    margin-bottom: 24px;
    font-size: 20px;
    line-height: 28px;
}