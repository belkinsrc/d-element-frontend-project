.swiper-container {
    margin-bottom: 80px;
}

.swiper-buttons {
    position: absolute;
    right: 0;
    top: 4px;
    display: flex;
    gap: 32px;
}

.swiper-buttons div {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    cursor: pointer;
    transition: box-shadow 0.3s;
}

.swiper-buttons div:hover {
    box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.25);
}